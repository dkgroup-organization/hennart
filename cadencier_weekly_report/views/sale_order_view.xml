<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='order_lines']" position="before">
                <page string="Sales History">
                    <field name="history_lines">
                        <tree string="Sales History" editable="bottom">
                            <field name="product_id" readonly="1"/>
                            <field name="qty"/>
                            <field name="discount"/>
                            <field name="availability" widget="html"/>
                            <field name="weight"/>
                            <field name="cadence" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>