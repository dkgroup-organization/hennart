<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_delivery_document_inherits" inherit_id="stock.report_delivery_document">
        <xpath expr="//div[@class='page']" position="before">
            <t t-if="o.state != 'done'">
                <div style="margin-top: 10px;">
                    <img src="/customize_report/static/img/preparation.png" style="width: 100px; height: auto;"/>
                    <span>Preparation en cours (Informations non confirm√©es, ne pas envoyer au client)</span>
                </div>
            </t>
        </xpath>

        <xpath expr="//table[@name='stock_move_table']" position="replace">
            <table class="table table-sm" t-if="o.state!='done'" name="stock_move_table">
                <thead>
                    <tr>
                        <th name="th_sm_code"><strong>Code</strong></th>
                        <th name="th_sm_product"><strong>Product</strong></th>
                        <th name="th_sm_ordered"><strong>Ordered</strong></th>
                        <th name="th_sm_quantity"><strong>Delivered</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="lines" t-value="o.move_ids.filtered(lambda x: x.product_uom_qty)"/>
                    <tr t-foreach="lines" t-as="move">
                        <td>
                            <span t-field="move.default_code"/>
                        </td>
                        <td>
                            <span t-field="move.product_id"/>
                            <p t-if="move.description_picking != move.product_id.name and move.description_picking != move.product_id.display_name">
                                <span t-field="move.description_picking"/>
                            </p>
                        </td>
                        <td>
                            <span t-field="move.product_uom_qty"/>
                            <span t-field="move.product_id.uos_id"/>
                        </td>
                        <td>
                            <t t-if="move.product_id.uos_id.name == 'kg'">
                                <span t-field="move.weight"/>
                            </t>
                            <t t-else="">
                                <span t-field="move.quantity_done"/>
                            </t>
                            <span t-field="move.product_id.uos_id"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </xpath>

    </template>

</odoo>
