<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
       <record id="view_company_form_inherit_add_text" model="ir.ui.view">
            <field name="name">res.company.form.add.text</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='general_info']" position="after">
                    <page string="Report Text" name="general_info">
                        <group name="header_text" string="Header Text">
                            <field name="invoice_header_text" widget="html"/>
                        </group>
                        <group name="footer_text" string="Footer Text">
                            <field name="invoice_footer_text" widget="html"/>
                        </group>
                    </page>
                </xpath>

              
           </field>
        </record>


    </data>
</odoo>
