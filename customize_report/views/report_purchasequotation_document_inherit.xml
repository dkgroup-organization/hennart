<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   <template id="report_purchasequotation_document_inherit" inherit_id="purchase.report_purchasequotation_document">
       <xpath expr="//h2" position="after">
           <div id="informations" class="row mt-4 mb32">
                <div  class="col-3 bm-2">
                    <strong>Date de commande :</strong>
                    <p t-field="o.date_order"  t-options="{'widget': 'date'}" class="m-0"/>
                </div>
                <div  class="col-3 bm-2">
                    <strong>Date de livraison :</strong>
                    <p t-field="o.date_planned"  t-options="{'widget': 'date'}" class="m-0"/>
                </div>
            </div>
       </xpath>
       <xpath expr="//th[@name='th_expected_date']" position="replace">
            <th name="th_code_product" class="text-center"><strong>Code Hennart</strong></th>
            <th name="th_package" class="text-center"><strong>Nb de Colis</strong></th>


       </xpath>
       <xpath expr='//t[@t-if="not order_line.display_type"]' position="replace">
            <t t-if="not order_line.display_type">
                                <td id="product">
                                    <span t-field="order_line.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="order_line.product_id.default_code"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="order_line.product_packaging_qty"/>
                                </td>
                                <td class="text-end">
                                    <span t-field="order_line.product_qty"/>
                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                </td>
                            </t>
       </xpath>

   </template>
</odoo>