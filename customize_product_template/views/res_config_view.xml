<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_custom_product_config_settings" model="ir.ui.view">
            <field name="name">package settings</field>
            <field name="model">res.config.settings</field>
            <field name="priority">10</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <div name="operations_setting_container" position="inside">
                    <div class="col-12 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Customization</span>
                            <span class="fa fa-lg fa-building-o" title="Customization of packaging."
                                  aria-label="Customization of packaging."
                                  role="img"/>
                            <div class="text-muted">
                                Create BOM after import package from openerp V7.
                            </div>
                            <div class="content-group">
                                <div class="mt8">
                                    <button name="button_update_packaging"
                                            string="Update packaging"
                                            icon="fa-arrow-right"
                                            class="btn-link"
                                            type="object"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
