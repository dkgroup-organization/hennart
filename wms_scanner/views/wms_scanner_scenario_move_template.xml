<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="scanner_scenario_move" name="scanner_scenario_move">
            <html>
                <t t-call="wms_scanner.scanner_html_head"/>
                <body class="font-poppins duration-500 min-h-screen">
                    <t t-call="wms_scanner.scanner_menu_body_header"/>
                    <t t-call="wms_scanner.scanner_move_body_main"/>
                    <script src="wms_scanner/static/src/js/script.js"/>
                </body>
            </html>
        </template>

        <template id="scanner_move_body_main" name="scanner_move_body_main">
            <main class="relative">

                <section id="move">
                    <div class="container mx-auto px-5 pb-5">
                        <div class="flex items-center gap-2.5 mb-14 landscape:mb-5">
                            <svg
                                    width="40"
                                    height="40"
                                    viewBox="0 0 30 30"
                                    xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                        class="fill-blue-500"
                                        d="M15.25 17.5L14.0938 18.6562C13.8646 18.8854 13.75 19.1771 13.75 19.5312C13.75 19.8854 13.8646 20.1771 14.0938 20.4063C14.3229 20.6354 14.6146 20.75 14.9688 20.75C15.3229 20.75 15.6146 20.6354 15.8438 20.4063L19.125 17.125C19.375 16.875 19.5 16.5833 19.5 16.25C19.5 15.9167 19.375 15.625 19.125 15.375L15.8438 12.0938C15.6146 11.8646 15.3229 11.75 14.9688 11.75C14.6146 11.75 14.3229 11.8646 14.0938 12.0938C13.8646 12.3229 13.75 12.6146 13.75 12.9688C13.75 13.3229 13.8646 13.6146 14.0938 13.8438L15.25 15H11.25C10.8958 15 10.5992 15.1196 10.36 15.3587C10.12 15.5987 10 15.8958 10 16.25C10 16.6042 10.12 16.9008 10.36 17.14C10.5992 17.38 10.8958 17.5 11.25 17.5H15.25ZM5 25C4.3125 25 3.72417 24.7554 3.235 24.2663C2.745 23.7763 2.5 23.1875 2.5 22.5V7.5C2.5 6.8125 2.745 6.22417 3.235 5.735C3.72417 5.245 4.3125 5 5 5H11.4688C11.8021 5 12.12 5.0625 12.4225 5.1875C12.7242 5.3125 12.9896 5.48958 13.2188 5.71875L15 7.5H25C25.6875 7.5 26.2763 7.745 26.7663 8.235C27.2554 8.72417 27.5 9.3125 27.5 10V22.5C27.5 23.1875 27.2554 23.7763 26.7663 24.2663C26.2763 24.7554 25.6875 25 25 25H5ZM5 7.5V22.5H25V10H13.9688L11.4688 7.5H5Z"
                                        fill="#9DB2CE"
                                />
                            </svg>
                            <h1>Move</h1>
                        </div>
                        <form class="grid grid-cols-1 gap-8 landscape:grid-cols-2 landscape:gap-x-5 landscape:gap-y-6"
                              method="post">
                            <div t-if="data.get('warning')" class="mt-8 landscape:mt-4" style="background-color: red;">
                                <span>
                                    <t t-esc="data.get('warning')"/>
                                </span>
                            </div>

                            <div class="landscape:order-first" id="location_origin_id">

                                <label for="location_origin_id">Location origin :</label>

                                <input t-if="data.get('step') and data['step'].action_variable == 'location_origin_id'"
                                        type="text"
                                        name="location_origin_id"
                                        class="w-full border border-gray-300 rounded-md p-2 mt-2.5"
                                        t-att-placeholder="data['step'].action_message"/>

                                <p t-if="data.get('location_origin_id')" class="w-full border border-gray-300 rounded-md p-2 mt-2.5">
                                    <t t-esc="data['location_origin_id'].name"/>
                                </p>


                            </div>

                            <div class="landscape:order-2">
                                <label for="product_id">Product :</label>
                                <input
                                        type="text"
                                        name="product_id"
                                        class="w-full border border-gray-300 rounded-md p-2 mt-2.5"
                                        placeholder="Nom du produit"
                                />
                            </div>
                            <div class="landscape:order-4">
                                <label for="quantity">Quantity :</label>
                                <input
                                        type="number"
                                        name="quantity"
                                        class="w-full border border-gray-300 rounded-md p-2 mt-2.5"
                                        placeholder="Quantité à déplacer"
                                />
                            </div>
                            <div class="landscape:order-3">
                                <label for="location_dest_id">Location destination :</label>
                                <input
                                        type="text"
                                        name="location_dest_id"
                                        class="w-full border border-gray-300 rounded-md p-2 mt-2.5"
                                        placeholder="Emplacement de destination"
                                />
                            </div>


                            <div t-if="message" class="mt-8 landscape:mt-4">
                                <span>
                                    <t t-raw="message"/>
                                </span>
                            </div>
                            <div class="mt-8 landscape:mt-4 landscape:order-last">
                                <button type="submit" class="btn-green">Valid</button>
                            </div>
                        </form>
                    </div>
                </section>
            </main>
        </template>

    </data>
</odoo>
