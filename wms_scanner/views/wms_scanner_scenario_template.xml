                            <h1>Informations</h1>
                        </div>
                        <form class="grid grid-cols-1 gap-8 landscape:gap-6" method="post">
                            <t t-if="scenario">
                                <input type="hidden" name="scenario" t-att-value="scenario.id"/>
                            </t>
                            <t t-if="step">
                                <input type="hidden" name="step" t-att-value="step.id"/>
                            </t>

                            <div>
                                <label for="code">Code barre:</label>
                                <input
                                        type="text"
                                        name="scan"
                                        class="w-full border border-gray-300 rounded-md p-2 mt-2.5"
                                />
                            </div>
                            <div class="mt-8 landscape:mt-4 landscape:order-last">
                                <button type="submit" class="btn-green">Valider</button>
                            </div>
                        </form>
                    </div>
                </section>
            </main>
