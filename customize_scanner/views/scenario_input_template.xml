        <template id="scanner_input_simple_expiry_date" name="scanner_input_expiry_date">
            <t t-call="customize_scanner.scanner_sub_input">
                <t t-set="action_variable" t-value="'expiry_date'"/>
            </t>
        </template>

    </data>
</odoo>
