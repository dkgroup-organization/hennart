<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- wizard print label-->
    <record id="view_label_container" model="ir.ui.view">
      <field name="name">Print Label</field>
      <field name="model">label.container</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Print Label">
          <group>
            <field name="printer_id"/>
          </group>
   
          <group string="Description">
            <field name="name"/>
            <field name="nb_container" invisible="1"/>
            <field name="nb_total_container"/>
            <field name="partner_name"/>
            <field name="street"/>
            <field name="street2"/>
            <field name="zip"/>
            <field name="city"/>
            <field name="country"/>
            <field name="barcode"/>
          </group>
        
          <group >
            <button special="cancel" string="Cancel"/>
            <button name="valide" string="Print" type="object" icon="fa-print"/>
          </group>
        </form>
      </field>
    </record>

    <record id="action_label_container" model="ir.actions.act_window">
      <field name="name">Print Label container</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">label.container</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <record id="view_picking_out_label_container_button_form" model="ir.ui.view">
      <field name="name">stock.picking.out.label.container.form</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>

      <field name="priority">100</field>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='action_see_packages']" position="before">
     
          <button name="%(action_label_container)d" string="Print Container" type="action" icon="fa-print"/>
   
        </xpath>
      </field>
    </record>


  </data>
</odoo>
