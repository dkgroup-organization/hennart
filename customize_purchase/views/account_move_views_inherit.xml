<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='product_uom_id']" position="attributes">
                    <attribute name="string">U</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='product_uom_id']" position="after">
                    <field name="product_packaging_qty" string="Nb"/>
                    <field name="product_packaging_id" string="Collissage"/>
                    <field name="weight" string="Poids"/>
                    <field name="base_price" string="Prix de base"/>
                    <field name="discount1"/>
                    <field name="discount2"/>
                    <field name="discount" string="Promo %"/>

                </xpath>
                 <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_unit']" position="attributes">
                    <attribute name="string">Prix unitaire</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_unit']" position="after">
                    <field name="product_uos" string="unitÃ© de facturation"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_subtotal']" position="attributes">
                    <attribute name="string">Montant</attribute>
                </xpath>
            </field>
        </record>


    </data>
</odoo>