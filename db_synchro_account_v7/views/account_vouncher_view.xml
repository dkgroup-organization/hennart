<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_voucher_imported_form" model="ir.ui.view">
    <field name="name">account.voucher.form</field>
    <field name="model">account.voucher</field>
    <field name="arch" type="xml">
      <form string="voucher imported">

<header>
<button name="recompute_voucher" string="recompute" type="object"/>
<button name="import_remote_move" string="Import Move" type="object"/>

</header>

        <sheet string="Imported voucher">
          <group>
            <field name="number"/>
            <field name="name"/>



            <field name="move_id" can_create="true" can_write="true"/>

          </group>

	<notebook>
        <page string='general'>

          <group>
            <field name="state"/>

            <field name="amount"/>
            <field name="partner_id" can_create="true" can_write="true"/>
            <field name="date"/>
            <field name="account_id" can_create="true" can_write="true"/>



            <field name="currency_id" can_create="true" can_write="true"/>
            <field name="journal_id" can_create="true" can_write="true"/>
            <field name="company_id" can_create="true" can_write="true"/>
            <field name="narration"/>
            <field name="type"/>
            <field name="reference"/>
          </group>
        </page>





        <page string='synchro'>
          <group>

            <field name="synchro_obj"/>
            <field name="voucher_line_ok"/>
            <field name="voucher_post_ok"/>
            <field name="voucher_post"/>

          </group>
        </page>

	</notebook>

        </sheet>
      </form>
    </field>
  </record>
  <record id="view_voucher_imported_tree" model="ir.ui.view">
    <field name="name">account.voucher.tree</field>
    <field name="model">account.voucher</field>
    <field name="arch" type="xml">
      <tree string="Account voucher">
        <field name="date"/>
        <field name="number"/>
        <field name="name"/>
        <field name="amount"/>
        <field name="journal_id"/>
        <field name="type"/>
        <field name="voucher_post"/>
      </tree>
    </field>
  </record>

  <record id="view_search_account_voucher" model="ir.ui.view">
    <field name="name">account.voucher.form</field>
    <field name="model">account.voucher</field>
    <field name="arch" type="xml">
      <search string="voucher">
        <field name="number"/>
        <field name="name"/>
        <group string="Group By">
          <filter string="Partner" name="partner" context="{'group_by':'partner_id'}"/>

        </group>
      </search>
    </field>
  </record>

  <record id="action_voucher_imported_tree" model="ir.actions.act_window">
    <field name="name">Voucher Imported</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">account.voucher</field>
    <field name="binding_view_types">form</field>
  </record>
  <menuitem action="action_voucher_imported_tree" id="synchro_voucher_tree_menu_id" parent="sirius_synchro.synchro_history" sequence="60"/>
</odoo>
