<?xml version="1.0"?>
<odoo>
    <data>
        <record id="import_account_move" model="ir.ui.view">
            <field name="name">Create Import Paie</field>
            <field name="model">account.move.import</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create Import Salary">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,selection,imported"/>
                    </header>
                    <group>
                        <field name="file" widget="binary" attrs="{'invisible': [('state', 'in', ['selection', 'imported'])]}" filename="filename"/>
                        <field name="filename" invisible="1"/>
                        <field name="file_line" widget="binary" attrs="{'invisible': [('state', 'in', ['selection', 'imported'])]}" filename="filename_line"/>
                        <field name="filename_line" invisible="1"/>
                    </group>
                    <group>
                        <field name="line_ids" widget="one2many_list" colspan="4" nolabel="1" attrs="{'invisible': [('state', 'in', ['draft', 'imported'])]}" options="{'no_create': True}">
                            <tree editable="bottom" string="data to import listed" create="false" edit="false" delete="false">
                                <field name="name_company" readonly="1"/>
                                <field name="selected"/>
                                <field name="id_account_move" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                      <button name="controllers_import" string="Create Import Salary in Odoo" class="oe_highlight" type="object" attrs="{'invisible': [('state', 'in', ['draft','imported'])]}"/>
                      <button name="controllers_load_header" string="Create Import Salary" class="oe_highlight" type="object" attrs="{'invisible': [('state', 'in', ['selection'])]}"/>
                      <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_import_account_move_act_window" model="ir.actions.act_window">
            <field name="name">Create Import Salary</field>
            <field name="res_model">account.move.import</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_import_account_move"
          name="Create Import Salary"
          action="action_import_account_move_act_window"
          parent="account_accountant.menu_accounting"
          sequence="25"/>
    </data>
</odoo>
