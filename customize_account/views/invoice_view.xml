<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="account_move_view_form_extend" model="ir.ui.view">
        <field name="name">dk_group.account.invoice_view_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='product_uom_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='product_uom_id']" position="after">
                <field name="product_uos" optional="show"/>
            </xpath>

            <xpath expr="//field[@name='partner_shipping_id']" position="after">
				<label for="picking_ids"/>
                <div class="o_row">
                    <field name="picking_ids" widget="many2many_tags" readonly="0"/>
                    <button name="compute_picking_ids" type="object" icon="fa-refresh"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
